<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pe.adoptapet.adoptapet.view.LoginActivity$HomeFragment"
    android:background="@drawable/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/rlHomeCenter"
        android:background="@drawable/bg_white_rounded"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/home_logo"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:id="@+id/txtLoginUser"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:hint="User"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtLoginPassword"
            android:layout_below="@+id/txtLoginUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:hint="Password"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btnLoginLogin"
            android:layout_below="@+id/txtLoginPassword"
            android:layout_centerHorizontal="true"
            style="@style/HomeButtonStyle"/>


    </RelativeLayout>

</RelativeLayout>
