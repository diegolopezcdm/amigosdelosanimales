<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <ImageView
        android:id="@+id/campaign_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/home_logo" />
    <TextView
        android:id="@+id/campaign_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Campaign"
        android:gravity="center_vertical"
        android:shadowColor="@android:color/white"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_alignTop="@+id/campaign_item_icon"
        android:layout_toRightOf="@+id/campaign_item_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/campaign_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Description"
        android:gravity="center_vertical"
        android:shadowColor="@android:color/white"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_below="@+id/campaign_item_text"
        android:layout_alignLeft="@+id/campaign_item_text"
        android:layout_alignStart="@+id/campaign_item_text"
        android:layout_alignRight="@+id/campaign_item_text"
        android:layout_alignEnd="@+id/campaign_item_text" />
</RelativeLayout>